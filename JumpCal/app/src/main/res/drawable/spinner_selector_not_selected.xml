<?xml version="1.0" encoding="UTF-8"?>
 <selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item>
            <layer-list>
                <item android:right="1dp" android:top="1dp">
                    <shape>
                        <corners android:radius="24dp" />
                        <solid android:color="#dfdfdf" />
                    </shape>
                </item>
                <item android:bottom="1dp" android:left="1dp">
                    <shape>
                        <gradient android:angle="270"
                            android:endColor="#f4f4f4" android:startColor="#faf5f9" />
                        <stroke android:width="1dp" android:color="#f6f4f5" />
                        <corners android:radius="25dp" />
                        <padding android:bottom="7dp" android:left="7dp"
                            android:right="7dp" android:top="7dp" />
                    </shape>
                </item>
            </layer-list>
        </item>

 </selector>
