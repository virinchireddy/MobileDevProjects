<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/rgStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_margin="@dimen/padding_small">

        <RadioButton
            android:id="@+id/rbHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home" 
            android:textSize="@dimen/text_size_standard"/>

        <RadioButton
            android:id="@+id/rbBarHopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bar Hopping"
            android:textSize="@dimen/text_size_standard" />
        <RadioButton
            android:id="@+id/rbBarName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_standard"
            android:visibility="gone" 
            />
        
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp" >

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/check_in_button_height"
                android:layout_marginRight="@dimen/padding_xxsmall"
                android:layout_marginTop="@dimen/padding_small"
                android:layout_weight="0.5"
                android:background="@drawable/blue_stoke"
                android:text="Cancel"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_standard" />

            <Button
                android:id="@+id/btnSet"
                android:layout_width="0dp"
                android:layout_height="@dimen/check_in_button_height"
                android:layout_marginLeft="@dimen/padding_xxsmall"
                android:layout_marginTop="@dimen/padding_small"
                android:layout_weight="0.5"
                android:background="@drawable/blue_stoke"
                android:text="Set"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_standard" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>