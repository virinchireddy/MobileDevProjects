<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" 
    android:gravity="center">
    
  <LinearLayout 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      >
   <ImageView 
       android:layout_width="200dp"
       android:layout_height="200dp"
       android:src="@drawable/beadfullpage"/>   
      
  </LinearLayout>  
<LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
   <TextView 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="10dp"
       android:text="Beads are representation for frendship. \nAre you sure you want to share a bead with this person?"
       android:textColor="@color/black"
       android:textSize="@dimen/text_size_standard"/> 
</LinearLayout> 
<LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:layout_marginLeft="30dp">

<Button
    android:id="@+id/beadButtonSend"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:background="@drawable/blue_stoke"
    android:text="Send"
    android:textColor="@color/black"
    android:textSize="@dimen/text_size_standard" />

<Button
    android:id="@+id/beadButtonCancel"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:layout_marginLeft="10dp"
    android:background="@drawable/blue_stoke"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:text="Cancel"
    android:textColor="@color/black"
    android:textSize="@dimen/text_size_standard" />

</LinearLayout>

</LinearLayout>
