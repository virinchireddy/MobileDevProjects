<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/liBarsProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_stoke"
        android:orientation="horizontal"
        android:padding="2dp" >

        <ImageView
            android:id="@+id/ivBarPhoto"
            android:layout_width="@dimen/bar_photo_width"
            android:layout_height="@dimen/bar_photo_height"
           />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp" >

            <TextView
                android:id="@+id/tvBarName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_large"
               />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvBarDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="13"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_small" 
                    />

                <TextView
                    android:id="@+id/tvTypeOfBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_small" 
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/liFacilities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/ivFacility1"
                    android:layout_width="@dimen/padding_large"
                    android:layout_height="@dimen/padding_large"
                    android:layout_margin="@dimen/padding_xxxsmall"
                    android:visibility="gone" 
                    />

                <ImageView
                    android:id="@+id/ivFacility2"
                    android:layout_width="@dimen/padding_large"
                    android:layout_height="@dimen/padding_large"
                    android:layout_margin="@dimen/padding_xxxsmall"
                    android:visibility="gone"
                     />

                <ImageView
                    android:id="@+id/ivFacility3"
                    android:layout_width="@dimen/padding_large"
                    android:layout_height="@dimen/padding_large"
                    android:layout_margin="@dimen/padding_xxxsmall"
                    android:visibility="gone" 
                    />

                <ImageView
                    android:id="@+id/ivFacility4"
                    android:layout_width="@dimen/padding_large"
                    android:layout_height="@dimen/padding_large"
                    android:layout_margin="@dimen/padding_xxxsmall"
                    android:visibility="gone" 
                   />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/liOnlineMembers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_xxxsmall"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="1dp"
                    android:text="Online Members: "
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/tvBarOnlineMembers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="1dp"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>

             <LinearLayout
                android:id="@+id/liUserImages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/ivUserImage1"
                    android:layout_width="@dimen/bar_user_image_width"
                    android:layout_height="@dimen/bar_user_image_height"
                    android:layout_margin="2dp"
                    android:visibility="gone"
                    android:background="@drawable/user_img1" />

                <ImageView
                    android:id="@+id/ivUserImage2"
                    android:layout_width="@dimen/bar_user_image_width"
                    android:layout_height="@dimen/bar_user_image_height"
                    android:layout_margin="2dp"
                    android:visibility="gone"
                    android:background="@drawable/user_img1" />

                <ImageView
                    android:id="@+id/ivUserImage3"
                    android:layout_width="@dimen/bar_user_image_width"
                    android:layout_height="@dimen/bar_user_image_height"
                    android:layout_margin="2dp"
                    android:visibility="gone" 
                    android:background="@drawable/user_img1"/>

                <ImageView
                    android:id="@+id/ivUserImage4"
                    android:layout_width="@dimen/bar_user_image_width"
                    android:layout_height="@dimen/bar_user_image_height"
                    android:layout_margin="2dp"
                    android:visibility="gone" 
                    android:background="@drawable/user_img1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>