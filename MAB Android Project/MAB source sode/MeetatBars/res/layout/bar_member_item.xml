<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding_xxsmall" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/ivUserImage"
            android:layout_width="@dimen/bar_member_photo_width"
            android:layout_height="@dimen/bar_member_photo_height"
            android:background="@drawable/user_img1" />
        
    </RelativeLayout>

    <TextView
        android:id="@+id/tvMemberName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_xxsmall"
        android:text="Vishnu Vasu"
        android:textColor="@color/black"
        android:singleLine="true"
        android:textSize="@dimen/text_size_small" />

</LinearLayout>