<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/padding_standard"
    android:layout_marginRight="@dimen/padding_standard"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/liQuestion2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_small"
        android:orientation="vertical"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_xxsmall"
                android:padding="@dimen/padding_xxsmall"
                android:text="Question"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_standard" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnAnswer1"
                android:layout_width="0dp"
                android:layout_height="@dimen/answers_buttons_size"
                android:layout_marginRight="@dimen/padding_small"
                android:layout_marginTop="@dimen/padding_xxsmall"
                android:layout_weight="0.5"
                android:background="@drawable/blue_stoke"
                android:paddingLeft="@dimen/padding_xxsmall"
                android:paddingRight="@dimen/padding_xxsmall"
                android:singleLine="true"
                android:text="Answer1"
                android:tag="1"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnAnswer2"
                android:layout_width="0dp"
                android:layout_height="@dimen/answers_buttons_size"
                android:layout_marginTop="@dimen/padding_xxsmall"
                android:layout_weight="0.5"
                android:background="@drawable/blue_stoke"
                android:paddingLeft="@dimen/padding_xxsmall"
                android:paddingRight="@dimen/padding_xxsmall"
                android:singleLine="true"
                android:tag="2"
                android:text="Answer2"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnAnswer3"
                android:layout_width="0dp"
                android:layout_height="@dimen/answers_buttons_size"
                android:layout_marginRight="@dimen/padding_small"
                android:layout_marginTop="@dimen/padding_xxsmall"
                android:layout_weight="0.5"
                android:background="@drawable/blue_stoke"
                android:paddingLeft="@dimen/padding_xxsmall"
                android:paddingRight="@dimen/padding_xxsmall"
                android:tag="3"
                android:singleLine="true"
                android:text="Answer3"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnAnswer4"
                android:layout_width="0dp"
                android:layout_height="@dimen/answers_buttons_size"
                android:layout_marginTop="@dimen/padding_xxsmall"
                android:layout_weight="0.5"
                android:background="@drawable/blue_stoke"
                android:paddingLeft="@dimen/padding_xxsmall"
                android:paddingRight="@dimen/padding_xxsmall"
                android:singleLine="true"
                android:tag="4"
                android:text="Answer4"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnAnswer5"
                android:layout_width="0dp"
                android:layout_height="@dimen/answers_buttons_size"
                android:layout_marginRight="@dimen/padding_small"
                android:layout_marginTop="@dimen/padding_xxsmall"
                android:layout_weight="0.5"
                android:background="@drawable/blue_stoke"
                android:paddingLeft="@dimen/padding_xxsmall"
                android:tag="5"
                android:paddingRight="@dimen/padding_xxsmall"
                android:singleLine="true"
                android:text="Answer5"
                android:textColor="@color/black"
