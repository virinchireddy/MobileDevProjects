        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnAnswer7"
                android:layout_width="0dp"
                android:layout_height="@dimen/answers_buttons_size"
                android:layout_marginRight="@dimen/padding_small"
                android:layout_marginTop="@dimen/padding_xxsmall"
                android:layout_weight="0.5"
                android:background="@drawable/blue_stoke"
                android:paddingLeft="@dimen/padding_xxsmall"
                android:tag="7"
                android:paddingRight="@dimen/padding_xxsmall"
                android:singleLine="true"
                android:text="Answer7"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnAnswer8"
                android:layout_width="0dp"
                android:layout_height="@dimen/answers_buttons_size"
                android:layout_marginTop="@dimen/padding_xxsmall"
                android:layout_weight="0.5"
                android:background="@drawable/blue_stoke"
                android:paddingLeft="@dimen/padding_xxsmall"
                android:tag="8"
                android:paddingRight="@dimen/padding_xxsmall"
                android:singleLine="true"
                android:text="Answer8"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>