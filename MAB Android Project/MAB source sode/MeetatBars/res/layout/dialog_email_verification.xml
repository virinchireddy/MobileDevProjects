<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/edittext_round_corners"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_standard"
        android:gravity="center_horizontal"
        android:padding="@dimen/padding_small"
        android:text="Please enter the 4 digit verification code received in your registered email. Please check your junk mail as well. You may also verify later by logging into your account." 
        android:textSize="@dimen/text_size_standard"/>

    <EditText
        android:id="@+id/etVerificationCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_standard"
        android:background="@drawable/edittext_round_corners"
        android:gravity="center_horizontal"
        android:hint="- - - -"
        android:maxLength="4"
        android:inputType="number"
        android:textCursorDrawable="@null"
        android:paddingBottom="@dimen/padding_small"
        android:paddingLeft="@dimen/padding_standard"
        android:paddingRight="@dimen/padding_standard"
        android:paddingTop="@dimen/padding_small" 
        android:textSize="@dimen/text_size_standard"/>

    <Button
        android:id="@+id/btnVerify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_small"
        android:background="@drawable/login_button_selector"
        android:text="Verify" 
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_small"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Re-send verification code,  " 
            android:textSize="@dimen/text_size_standard"/>

        <TextView
            android:id="@+id/tvClickToSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/click_to_resend"
            android:textColor="@color/login"
            android:textSize="@dimen/text_size_standard" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/padding_small"
        android:background="@color/login_pressed" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="@dimen/padding_standard"
        android:layout_marginRight="@dimen/padding_standard"
        android:layout_marginTop="@dimen/padding_small"
        android:paddingLeft="@dimen/padding_small"
        android:paddingRight="@dimen/padding_small"
        android:background="@drawable/login_button_selector"
        android:text="Cancel"
        android:textColor="@color/white" />

</LinearLayout>